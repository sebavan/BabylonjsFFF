{
    "compilerOptions": {
        "module": "ES2020",
        "target": "es2021",
        "moduleResolution": "node",
        "sourceMap": true,
        "types" : [],
        "lib": ["dom", "es2015"],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
        "preserveConstEnums":true,
    },
    "include": [
        "src/**/*"
    ],
}